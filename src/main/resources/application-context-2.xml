<?xml version="1.0" encoding="UTF-8"?>
<beans 	xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
		default-init-method="turnOnLights"
		default-destroy-method="turnOffLights"
		>
	<!-- Bean declarations go here -->
	<bean id="duke" class="spring.pag033.Juggler"></bean>
	
	<!-- Se usa el constructor para asignarle bean bags -->
	<bean id="duke15beanbags" class="spring.pag033.Juggler">
		<constructor-arg value="15"/>
	</bean>
	
	<bean id="sonnet29" class="spring.pag033.Sonnet29"></bean>
	<bean id="poeticDuke" class="spring.pag033.PoeticJuggler">
		<constructor-arg value="30"/>
		<constructor-arg ref="sonnet29"/>
	</bean>
	
	<!-- Se define un bean sin tener un constructor publico -->
	<bean id="theStage" class="spring.pag037.Stage" factory-method="getInstance"/>
	
	<!-- Se define un bean con scope prototype -->
	<bean id="ticket" class="spring.pag038.Ticket" scope="prototype"/>
	
	<bean id="auditorium" class="spring.pag040.Auditorium" 
		init-method="turnOnLights" destroy-method="turnOffLights"/>
		
	<bean id="auditoriumDefault" class="spring.pag040.AuditoriumDefaultMethodSample" />
	
	<!-- Injecting into bean properties -->
	<bean id="kenny" class="spring.pag041.Instrumentalist"/>
	
	<bean id="kenny2" class="spring.pag041.Instrumentalist">
		<property name="song" value="Curve"/>
		<property name="age" value="39"/>
	</bean>
	
	<bean id="saxophone" class="spring.pag041.Saxophone"/>
	<bean id="piano" class="spring.pag041.Piano"/>
	
	<bean id="george" class="spring.pag041.Instrumentalist">
		<property name="song" value="Curve"/>
		<property name="age" value="20"></property>
		<property name="instrument" ref="saxophone"/>
	</bean>
	
	<bean id="francisco" class="spring.pag041.Instrumentalist">
		<property name="song" 	value="Christmas Jingle Bell"/>
		<property name="age"	value="21"/>
		<property name="instrument" ref="piano"/>			
	</bean>
	
	<!-- Inject inner beans -->
	<bean id="guillermo" class="spring.pag041.Instrumentalist">
		<property name="song" 	value="Guadalajara"/>
		<property name="age"	value="22"/>
		<property name="instrument">
			<bean class="spring.pag041.Piano"/>
		</property>			
	</bean>
	
	<bean id="ochoa" class="spring.pag033.PoeticJuggler">
		<constructor-arg value="23"/>
		<constructor-arg>
			<bean class="spring.pag033.Sonnet29"/>
		</constructor-arg>
	</bean>
</beans>