<?xml version="1.0" encoding="UTF-8"?>
<beans 	xmlns="http://www.springframework.org/schema/beans"
		xmlns:p="http://www.springframework.org/schema/p"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
		default-init-method="turnOnLights"
		default-destroy-method="turnOffLights"
		>
		<!-- Referencing beans,properties and method with SPEL -->
		<bean id="guitar" class="spring.pag048.wiringCollections.Guitar"/>
		
		<bean id="kenny" class="spring.pag041.Instrumentalist">
			<property name="song" value="Curve"/>
		</bean>
		
		<bean id="carl" class="spring.pag041.Instrumentalist">
			<property name="song" value="#{kenny.song}"/>
			<property name="age" value="#{39}"/>
			<property name="instrument" value="#{guitar}"/>
		</bean>
</beans>